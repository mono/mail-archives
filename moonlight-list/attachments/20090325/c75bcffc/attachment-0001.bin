+const char*
+get_plugin_dir (void)
+{
+	static char *plugin_dir = NULL;
+
+	if (!plugin_dir) {
+		Dl_info dlinfo;
+		if (dladdr((void *) &plugin_show_menu, &dlinfo) == 0) {
+			fprintf (stderr, "Unable to find the location of libmoonplugin.so: %s\n", dlerror ());
+			return NULL;
+		}
+		plugin_dir = g_path_get_dirname (dlinfo.dli_fname);
+	}
+	return plugin_dir;
+}
