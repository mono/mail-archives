<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<!-- Made by <ildar _AT_ altlinux _DOT_ ru> at Fri Apr 28 02:21:23 2006 -->
<language _name="RPM spec" version="1.0" _section="Sources" mimetypes="text/x-spec">

	<line-comment _name = "Line Comment1" style= "Comment">
		<start-regex>#%%</start-regex>
	</line-comment>
<!-- Using #% is an error: # does not prevent the execution of a tag -->
	<line-comment _name = "Line Comment2" style = "Keyword">
		<start-regex>#%</start-regex>
	</line-comment>
	<line-comment _name = "Line Comment3" style= "Comment">
		<start-regex>#</start-regex>
	</line-comment>
	<block-comment _name = "Changelog" style = "Comment" end-at-line-end = "FALSE">
		<start-regex>%changelog</start-regex>
		<end-regex>xxxNONEXISTENTxxx</end-regex>
	</block-comment>

	<keyword-list _name = "Standard Key" style = "Data Type" case-sensitive="FALSE"
		match-empty-string-at-beginning = "FALSE"
		match-empty-string-at-end = "FALSE"
		beginning-regex = "^_?">
		<keyword>Name</keyword>
		<keyword>Version</keyword>
		<keyword>Release</keyword>
		<keyword>Serial</keyword>
		<keyword>Epoch</keyword>
		<keyword>Summary</keyword>
		<keyword>License</keyword>
		<keyword>Group</keyword>
		<keyword>Url</keyword>
		<keyword>Vendor</keyword>
		<keyword>Packager</keyword>
		<keyword>Source</keyword>
		<keyword>Patch</keyword>
		<keyword>Comment</keyword>
		<keyword>Provides</keyword>
		<keyword>Obsoletes</keyword>
		<keyword>Conflicts</keyword>
		<keyword>BuildConflicts</keyword>
		<keyword>PreReq</keyword>
		<keyword>BuildPreReq</keyword>
		<keyword>Requires</keyword>
		<keyword>BuildRequires</keyword>
		<keyword>ExclusiveArch</keyword>
		<keyword>BuildArch</keyword>
	</keyword-list>

	<keyword-list _name = "Tag1" style = "Others 3" match-empty-string-at-beginning = "FALSE" match-empty-string-at-end = "FALSE">
		<keyword>%[@?*{a-zA-Z0-9_][}a-zA-Z0-9_]*</keyword>
	</keyword-list>
	<keyword-list _name = "ShellVariable" style = "Others 2" match-empty-string-at-beginning = "FALSE" match-empty-string-at-end = "FALSE">
		<keyword>[$]+[@?*{a-zA-Z0-9_][}a-zA-Z0-9_]*</keyword>
	</keyword-list>

	<pattern-item _name="Hexadecimal Number" style="Base-N Integer">
		<regex>0[xX][a-fA-F0-9]+</regex>
	</pattern-item>
	<pattern-item _name="Number" style="Decimal">
		<regex>0|[\+-]?[1-9][0-9]*</regex>
	</pattern-item>
	<pattern-item _name="Floating-Point Number" style="Floating Point">
		<regex>[\+-]?(0|[1-9][0-9]*)?\.[0-9]+([Ee][\+-]?[1-9][0-9]*)?</regex>
	</pattern-item>
	<string _name = "Multiline String" style = "String" end-at-line-end = "FALSE">
		<start-regex>%description</start-regex>
		<end-regex>^[[:space:]]*$</end-regex>
	</string>
	<string _name = "String" style = "String" end-at-line-end = "TRUE">
		<start-regex>&quot;</start-regex>
		<end-regex>&quot;</end-regex>
	</string>
	<string _name = "String 2" style = "String" end-at-line-end = "TRUE">
		<start-regex>&apos;</start-regex>
		<end-regex>&apos;</end-regex>
	</string>

</language>
