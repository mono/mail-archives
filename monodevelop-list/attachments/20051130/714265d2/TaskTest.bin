using NUnit.Framework;

namespace MonoDevelop.Ide.Tasks
{
	[TestFixture]
	public class TaskTest
	{
		[Test]
		public new void ToString()
		{
			Task task = new Task("filename", "description", 0, 1);
			Assert.AreEqual("[Task:File=filename, Line=1, Column=0, Type=SearchResult, Description=description", task.ToString());
		}

		[Test]
		public new void ToStringWithNullFileName()
		{
			Task task = new Task(null, "description", 1, 0);
			Assert.AreEqual("[Task:File=, Line=0, Column=1, Type=Comment, Description=description", task.ToString());
		}
	}
}



