+		bool CheckStylesheetVersions (string datadir, string filename)
+		{
+			string expected = null;
+			XmlTextReader xtr = null;
+			try {
+				xtr = new XmlTextReader (
+					datadir + "WelcomePage.xsl");
+				xtr.MoveToContent ();
+				expected = xtr.GetAttribute ("version", "http://monodevelop.com/ns/2005/11");
+			} catch (XmlException) {
+				return false;
+			} finally {
+				if (xtr != null)	
+					xtr.Close ();
+			}
+			if (expected == String.Empty)
+				return false;
+			try {
+				xtr = new XmlTextReader (
+					datadir + filename);
+				xtr.MoveToContent ();
+				return expected == xtr.GetAttribute ("version", "http://monodevelop.com/ns/2005/11");
+			} catch (XmlException) {
+				return false;
+			} finally {
+				if (xtr != null)	
+					xtr.Close ();
+			}
+		}
+
+		string GetCurrentNeutralCultureName ()
+		{
+			CultureInfo c = CultureInfo.CurrentCulture;
+			while (!c.IsNeutralCulture && c.LCID != 0x7F)
+				c = c.Parent;
+			return c.Name;
+		}
