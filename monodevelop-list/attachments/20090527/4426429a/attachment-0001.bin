+				return switchName;
+			}
+		}
+		
+		public Switch (string switchName,
+		               string define,
+		               string helpStr)
+		{
+			this.switchName = AutotoolsContext.EscapeStringForAutoconf(switchName);
+			this.define = AutotoolsContext.EscapeStringForAutomake (define);
+			this.helpStr = helpStr;
+		}
