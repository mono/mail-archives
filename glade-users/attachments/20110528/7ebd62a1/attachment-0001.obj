CC     = gcc
CFLAGS = `pkg-config --cflags gtk+-2.0 gmodule-2.0 gthread-2.0`
LIBS   = `pkg-config --libs   gtk+-2.0 gmodule-2.0 gthread-2.0`
DEBUG  = -Wall -g

OBJECTS = test5.o

.PHONY: clean

all: test5

test5: $(OBJECTS)
	$(CC) $(DEBUG) $(LIBS) $(OBJECTS) -o $@

test5.o: test5.c test5.h
	$(CC) $(DEBUG) $(CFLAGS) -c $< -o $@

clean:
	rm -f *.o test5
