using System;
using System.Xml;

public class EntityTest {
	public static void Main(string[] args) {
		XmlValidatingReader reader = new XmlValidatingReader(new XmlTextReader("entitytest.xml"));
		reader.ValidationType = ValidationType.None;
		//new XmlTextWriter(Console.Out).WriteNode(reader, false);
		while (reader.Read()) {
			if (reader.NodeType == XmlNodeType.Whitespace) continue;
			Console.WriteLine(reader.NodeType + " " + reader.NamespaceURI + " " + reader.LocalName);
			if (reader.MoveToFirstAttribute()) {
				do {
					Console.WriteLine("  " + reader.NodeType + " " + reader.NamespaceURI + " " + reader.LocalName + " = " + reader.Value);
				} while (reader.MoveToNextAttribute());
			}
		}
	}
}
