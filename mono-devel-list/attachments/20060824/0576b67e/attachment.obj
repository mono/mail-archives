--- mcs/build/cs2vb.pl	(revision 0)
+++ mcs/build/cs2vb.pl	(revision 0)
@@ -0,0 +1,160 @@
+#!/usr/bin/perl -w
+
+#
+# cs2vb.pl
+#
+# Author:
+#   Kornél Pál <http://www.kornelpal.hu/>
+#
+# Copyright (C) 2006 Kornél Pál
