#!/bin/bash
#Signs and adds the specified dll to gac

DLL=Microsoft.VisualBasic
KEY_PATH=$HOME/mono-s/mcs/class/mono.snk

if [ $# -ne 1 ];then
	echo "Usage: $0 <dll_name>"
	exit 1
fi

echo gacutl -u ${DLL}
gacutil -u ${DLL}
echo sn -R $1 $KEY_PATH
sn -R $1 $KEY_PATH
echo gacutil -i ${DLL}.dll
gacutil -i ${DLL}.dll
