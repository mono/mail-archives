+					return found_type;
+				}
+			}
+
+			Type t2 = TypeManager.LookupTypeInModules (name);
+			if (t2 != null) {
+				if (found_type != null) {
+					Report.SymbolRelatedToPreviousError (t2);
+					Report.SymbolRelatedToPreviousError (found_type);
