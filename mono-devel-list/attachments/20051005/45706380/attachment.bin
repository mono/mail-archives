+			
+				TypeAttributes ta = t.Attributes & TypeAttributes.VisibilityMask;
+				if (ta != TypeAttributes.NotPublic && ta != TypeAttributes.NestedPrivate &&
+						ta != TypeAttributes.NestedAssembly && ta != TypeAttributes.NestedFamANDAssem) {
+					if (found_type == null) {
+						found_type = t;
