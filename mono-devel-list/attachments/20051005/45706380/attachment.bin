+		public void AddAssemblyReference (Assembly assembly)
+		{
+			Assembly [] tmp = new Assembly [assemblies.Length + 1];
+			Array.Copy (assemblies, 0, tmp, 0, assemblies.Length);
+			tmp [assemblies.Length] = assembly;
+
+			assemblies = tmp;
+		}
