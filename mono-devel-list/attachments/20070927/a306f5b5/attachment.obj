using System;
using System.Web.Script.Serialization;

namespace JsonTests
{
    public class JsonTest
    {
        public static void Main(string[] args)
        {
            string json = "{\"int_key\" : \"\"}";
            Console.WriteLine("Testing for empty values in JSON with this string:");
            Console.WriteLine(json);

            JavaScriptSerializer serializer = new JavaScriptSerializer();

            JsonObject obj = serializer.Deserialize<JsonObject>(json); 
            Console.WriteLine(obj);
            Console.Read();
        }
    }

    public class JsonObject
    {
        private Nullable<long> _int_key;

        public Nullable<long> int_key
        {
            get { return _int_key; }
            set { _int_key = value; }
        }

        public override string ToString()
        {
            return String.Format("int_key = {0}", this.int_key);
        }
    }
}
