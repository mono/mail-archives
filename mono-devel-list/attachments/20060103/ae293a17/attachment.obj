
using Gtk;
using Glade;
using System;

namespace GtkTest
{
	public class MainWindow
	{
		[Widget] Window mainWindow;
		[Widget] Widget instrumentView;
		
		public MainWindow()
		{
			using (new Sunfire.Core.Util.Gtk.CustomWidgetCreator(this))
			{
				XML gxml = new XML("GtkTest.gui.glade", "mainWindow");
				gxml.Autoconnect(this);
			}
		}
		
		private void Terminate()
		{
			Application.Quit();
		}
		
		private void OnMainWindowDelete(object sender, EventArgs args)
		{
			Terminate();
		}
		
		private void OnQuitToolButtonClicked(object sender, EventArgs args)
		{
			Terminate();
		}
		
		[Sunfire.Core.Util.Gtk.WidgetCreationFunction("CreateInstrumentView")]
		public Widget CreateInstrumentView(string name, string string1, string string2, int int1, int int2)
		{
			Widget w = new InstrumentView();
			w.ShowAll();
			return w;
		}
		
	}
}




