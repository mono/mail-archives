using System;
using Cairo;

class T
{
	static void Main ()
	{
		Surface s = Surface.CreateForImage (Format.ARGB32, 400, 400);
		Graphics g = new Graphics (s);
		g.LineWidth = 15;
		g.MoveTo (new PointD (200, 100));
		g.LineTo (new PointD (300, 300));
		g.RelLineTo (new PointD (-200, 0));
		g.ClosePath ();
		g.Stroke ();

		s.WriteToPng ("test.png");
	}
}
