using System;
using System.Threading;
using System.Windows.Forms;

namespace SplashTest
{
    public sealed class AppStart
    {
        private volatile static SplashForm splash;
        private static ThreadStart showSplash;
        private static Thread myThread;
        private static ApplicationContext context;

        [STAThread]
        static void Main() 
        {            
            context = new ApplicationContext();        
            Application.Idle += new EventHandler(AppIdle);

            showSplash = new ThreadStart(AppStart.ShowSplash);
            myThread = new Thread(showSplash);        

            myThread.IsBackground = true;
            myThread.ApartmentState = ApartmentState.STA;
            myThread.Start();
            Application.Run(context);

        }

        public static void ShowSplash()
        {
	
            Application.Idle += new EventHandler(AppIdle2);
           // Application.Idle += new EventHandler(AppIdle2);
            splash = new SplashForm();
            splash.Text="splash";//debug
            Application.Run(splash);   
        }
 	private static void AppIdle2(object sender, EventArgs e)
        {            
	    	Thread t=Thread.CurrentThread;
		Console.WriteLine("AppIdle2 from thread:"+t.ManagedThreadId);
                Application.Idle -= new EventHandler(AppIdle2);
	}
 	private static void AppIdle(object sender, EventArgs e)
        {            
	   Thread t=Thread.CurrentThread;
	    Console.WriteLine("AppIdle1 from thread:"+t.ManagedThreadId);
            if(context.MainForm == null)
            {
                    context.MainForm = new MainForm();
                    context.MainForm.Show();
                    Application.DoEvents();        

                    CleanUpSplash();
		   
                    Application.Idle -= new EventHandler(AppIdle);
            	}
        }

        private static void CleanUpSplash()
        {            
            if (myThread == null) return;
            if (splash == null) return;

            try
            {
               splash.Invoke(new MethodInvoker(splash.Close));
            }
            catch (Exception)
            {
            }
            myThread = null;
            splash = null;                    
        } 

    }
public class SplashForm : Form
    {
        public SplashForm()
        {
            this.Show();
            Application.DoEvents();
            this.BackColor = System.Drawing.Color.White;
            Label lb = new Label();
            lb.Text = "This is the splash";
            this.Controls.Add(lb);
        }
    }

    public class MainForm : Form
    {
        public MainForm()
        {
            this.Show();
            Application.DoEvents();
            // Just for test, normally here is code that take some time
            Thread.Sleep(2000);
            Label lb = new Label();
            lb.Text = "This is the main form";
            this.Controls.Add(lb);
        }
    }
}
