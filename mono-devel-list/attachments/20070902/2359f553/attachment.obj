using System;
using System.Web.Script.Serialization;

namespace Test
{
    public class JsonTest
    {
        public static void Main(string[] args)
        {
            TestClass test = new TestClass("magic!");
            JavaScriptSerializer serializer = new JavaScriptSerializer();

            Console.WriteLine("Serializing TestClass out as: {0}", serializer.Serialize(test));
        }
    }
    internal class TestClass
    {
        private string message;
        private string ignore_me;

        [ScriptElementAttribute("my_magic_message")]
        public string Message
        {
            get { return message; }
            set { message = value; }
        }

        [ScriptIgnoreAttribute]
        public string IgnoreMe
        {
            get { return ignore_me; }
            set { ignore_me = value; }
        } 
        
        public TestClass(string msg)
        {
            message = msg;
            ignore_me = "I hope to never see you";
        }
    }
}

