using System; 
using System.Collections;
using System.Text;
 
public class MyClass {
	const int n = 50;
	const int iter = 5000000;
	static void Main() 
	{
		string s2 = new String ('a', n);
		string s1 = new String ('a', n - 1) + 'b';
		
		char [] c = s2.ToCharArray ();
		StringBuilder sb = new StringBuilder (n * 5);
		
		int t1 = Environment.TickCount;
		for (int i = 0; i < iter; i ++)
			String.Equals (s1, s2);
		
		int t2 = Environment.TickCount;
		
		for (int i = 0; i < iter; i ++) {
			sb.Append (c).Append (c).Append (c).Append (c).Append (c);
			sb.Length = 0;
		}
		
		int t3 = Environment.TickCount;
		
		Console.WriteLine ("Equals      : {0}s", (t2 - t1) / 1000.0);
		Console.WriteLine ("Append      : {0}s", (t3 - t2) / 1000.0);
	}
}