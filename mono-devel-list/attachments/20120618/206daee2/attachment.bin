	public class ClickableDataGrid : System.Windows.Forms.DataGrid
	{
		public void ClickGrid(int X, int Y) {
			MouseEventArgs me = new MouseEventArgs(
				MouseButtons.Left,
				1,/*# of clicks*/ X,/*25 test*/
				Y,/*Y 45 test*/
				0/*wheel*/);
			OnMouseDown(me);
			OnClick(me);
		}

