--- svn-tools/svnci	2005-03-25 12:24:22.000000000 -0300
+++ svnci	2005-03-25 15:33:54.053378608 -0300
@@ -2,7 +2,17 @@
 
 FILES=$@
 
+# Automatically add the first level ChangeLog if omitted on a non-empty list
+if [[ "$FILES" != "" ]]
+then
+  if [[ `echo "$FILES" | grep 'ChangeLog' | wc -l` == 0 ]]
+  then
+  	FILES="ChangeLog $FILES"
+  fi
+fi
+
 echo "Creating commit message..."
+echo ""
 
 MSG=`mktemp`
 
@@ -14,10 +24,14 @@
 *) ;;
 esac
 
+echo About to commit these files
+echo ----------------------------------
+svn st $FILES | grep '^[^?]'
+echo ----------------------------------
+echo with this log message
+echo ==================================
 cat $MSG
