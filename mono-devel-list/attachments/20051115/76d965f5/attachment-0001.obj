using System;
using System.IO;
using System.Xml;
using System.Xml.Serialization;

namespace ConsoleAppXml
{
	public class enum_ser {
		public enum_ser() {
		}
		static void Main(string[] args) {
			XmlSerializer s = new XmlSerializer( typeof(EnumDefaultValue) );
			EnumDefaultValue obj = new EnumDefaultValue();
			StringWriter sw_raw = new StringWriter ();
			s.Serialize(sw_raw, obj);
			Console.WriteLine(sw_raw.ToString());
		}
	}

	[System.Flags()]
	public enum EnumDefaultValue {
		e1 = 1,
		e2 = 2,
		e3 = 3,
	}
}
