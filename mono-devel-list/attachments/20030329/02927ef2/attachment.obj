using System;
using System.IO;
using System.Xml;
using System.Xml.Serialization;

public class Test
{
	public static void Main (String [] args)
	{
		XmlDocument doc = new XmlDocument ();
		doc.LoadXml ("<root />");
		MySerializer ser = new MySerializer (typeof (XmlNode));
		StringWriter sw = new StringWriter ();
		ser.Serialize (sw, doc);
	}
}

class MySerializer : XmlSerializer
{
	public MySerializer (Type t) : base (t)
	{
		Console.WriteLine ("ctor.");
	}

	protected override void Serialize (object o, XmlSerializationWriter xsw)
	{
		Console.WriteLine ("called!!");
		base.Serialize (o, xsw);
	}
}

